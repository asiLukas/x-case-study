<odoo>
  <record id="view_hr_employee_email_wizard_form" model="ir.ui.view">
    <field name="name">hr.employee.email.wizard.form</field>
    <field name="model">hr.employee.email.wizard</field>
    <field name="arch" type="xml">
      <form string="Send Emails from Excel">
        <group>
          <field name="employee_contacts" />
        </group>
        <footer>
          <button string="Send Emails" type="object" name="send_welcome_mails"
            class="btn-primary" />
          <button string="Cancel" class="btn-secondary" special="cancel" />
        </footer>
      </form>
    </field>
  </record>
</odoo>
